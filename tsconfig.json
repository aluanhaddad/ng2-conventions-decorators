{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "alwaysStrict": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noEmit": false,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "pretty": true,
    "diagnostics": false,
    "traceResolution": false,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "rootDirs": [
      "src",
      "test"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  }
}